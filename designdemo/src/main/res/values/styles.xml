<resources>

    <!-- Base application theme. -->
    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. Android自带的直接改属性，自定义的要抽成attrs改 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPri">@color/colorPrimary</item>
        <item name="vp_bg">@color/white</item>
        <item name="navigationBackground">@color/navigation_background_light</item>
        <item name="navigation_item_text_color">@color/white</item>
        <item name="navigation_menu_text_color">@color/font_normal</item>
    </style>
    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPri">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="vp_bg">@color/gray</item>
        <item name="navigationBackground">@color/gray</item>
        <item name="navigation_item_text_color">@color/white_gray</item>
        <item name="navigation_menu_text_color">@color/white_gray</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- loadingDialog的样式 -->
    <style name="loadingdialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    <!-- progressbar的样式 -->
    <style name="loading_small" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@anim/loading</item>
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:minWidth">40dip</item>
        <item name="android:maxWidth">40dip</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
